{
    "name": "relight/relight",
    "description": "A delight v2 fork",
    "license": [
        "Apache-2.0",
        "MIT-0"
    ],
    "autoload": {
        "psr-4": {
            "Relight\\": "app/Relight/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "@phpstan -q",
            "@phpcs -q"
        ],
        "phpcs": "phpcs",
        "phpstan": "phpstan",
        "test": "phpunit"
    },
    "require": {
        "php": ">=7.2.5",
        "ext-mbstring": "*",
        "symfony/http-foundation": "^5.4",
        "symfony/routing": "^5.4",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^8.5|^9.6",
        "squizlabs/php_codesniffer": "^3.7"
    }
}
